<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgressActivity"
    android:layout_weight="100">

    <ListView
        android:id="@+id/progress_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp" />

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#007EA7"
        android:weightSum="30">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:drawableTop="@drawable/ic_dziennik_ind_gray_24dp"
            android:text="Dziennik"
            android:onClick="goToMainActivity"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:onClick="goToAtlasActivity"
            android:drawableTop="@drawable/ic_atlas_gray_24dp"
            android:text="Atlas"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/progress_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:drawableTop="@drawable/ic_data_usage_black_24dp"
            android:clickable="false"
            android:text="Progress"
            android:textColor="#FFF"
            android:textSize="12sp" />

    </LinearLayout>

</RelativeLayout>